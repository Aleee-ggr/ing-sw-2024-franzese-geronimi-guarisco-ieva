<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="tabPane" alignment="TOP_CENTER" prefHeight="800.0" prefWidth="600.0" style="-fx-background-color: efedd6;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="DECKS" StackPane.alignment="TOP_CENTER">
         <font>
            <Font name="Trattatello" size="20.0" />
         </font>
         <StackPane.margin>
            <Insets top="30.0" />
         </StackPane.margin>
      </Text>
      <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeTab" styleClass="button-close" text="X" StackPane.alignment="TOP_RIGHT">
         <StackPane.margin>
            <Insets right="15.0" top="15.0" />
         </StackPane.margin>
         <font>
            <Font name="Trattatello" size="13.0" />
         </font>
      </Button>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="600.0">
         <children>
            <VBox fx:id="decksContainer" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0" spacing="400.0">
               <children>
                  <ImageView fx:id="goldDeck" fitHeight="151.425" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="stdDeck" fitHeight="151.425" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <VBox fx:id="cardsContainer" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0" spacing="32.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="goldCard1" fitHeight="151.425" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="goldCard2" fitHeight="151.425" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="stdCard1" fitHeight="151.425" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
                  <ImageView fx:id="stdCard2" fitHeight="151.425" fitWidth="225.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </children>
         <StackPane.margin>
            <Insets bottom="20.0" top="80.0" />
         </StackPane.margin>
      </HBox>
   </children>
</StackPane>
